{
  "name": "fodinha-card-game",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/ensure-db.js && next dev -p 3000",
    "purge-lobbies": "node scripts/purge-lobbies.js",
    "purge-lobbies:dry": "node scripts/purge-lobbies.js --dry-run",
    "purge-lobbies:1day": "node scripts/purge-lobbies.js --max-age=1",
    "purge-lobbies:3days": "node scripts/purge-lobbies.js --max-age=3",
    "purge-lobbies:test": "node scripts/purge-lobbies.js --dry-run --max-age=0.125",
    "setup-discord": "node scripts/setup-discord-webhook.js",
    "build": "next build",
    "start": "node scripts/ensure-db.js && node scripts/purge-lobbies.js && next start",
    "start:no-purge": "node scripts/ensure-db.js && next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "lowdb": "^7.0.1",
    "next": "^14.1.0",
    "node-fetch": "^2.7.0",
    "raw-body": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/raw-body": "^2.1.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.0.0"
  }
}
